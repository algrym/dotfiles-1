#!/bin/bash
# Concatenate specified commands in vim
#
# Usage:
#	catbin <command>
#
# Author: Andreas Louv <andreas@louv.dk>
# Version: 1.0

pgm=${0##*/}
if test $# -eq 0
then
  >&2 printf 'Usage: %s <command>\n' "$pgm"
  return 1
fi
for arg
do
  if loc=$(command -v "$arg")
  then
    args+=("$loc")
  else
    >&2 printf "%s: %s No such command\n" "$pgm" "$arg"
    exit 1
  fi
done

exec cat "${args[@]}"
