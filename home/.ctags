--recurse=yes
--exclude=.git
--exclude=node_modules/\*
--exclude=dist/\*
--exclude='db/*'
--exclude='log/*'
--exclude=.svn
--exclude=.hg
--exclude=min
--exclude=vendor
--exclude=\*.min.\*
--exclude=\*.map
--exclude=\*.swp
--exclude=\*.bak
--exclude=\*.pyc
--exclude=\*.tar.\*
--exclude=source/current/script/lib
--exclude=source/current/font
--exclude=projects/script/lib
--exclude=projects/font

--langdef=js
--langmap=js:.js

--regex-js=/(['"]?)aliases\1:\s*\[\s*(['"])(.+?)\2/\3/c,class/
--regex-js=/function\s+(\w+)/\1/f,function/
--regex-js=/(['"]?)(\w+)\1:\s*function/\2/f,function/

--langdef=_css
--langmap=_css:.css
--langmap=_css:+.scss

--langdef=_json
--langmap=_json:.json
